# Workshop Intelligence System - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Neon PostgreSQL - PRIMARY)
# =============================================================================
# Get your connection string from: https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-xxx-xxx.us-east-2.aws.neon.tech/wis?sslmode=require

# =============================================================================
# LEGACY: Supabase Configuration (Optional - for migration)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude API (for AI report generation)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI API Key (alternative for report generation)
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# GOOGLE CLOUD APIs
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_VISION_API_KEY=your-vision-api-key
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Workshop Intelligence System"
NODE_ENV=development

# =============================================================================
# EMAIL/SMS SERVICES (for client notifications)
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Alternative: Resend for email notifications
# RESEND_API_KEY=re_your-resend-api-key
# EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# MAGIC LINK SECURITY
# =============================================================================
MAGIC_LINK_SECRET=your-secret-key-min-32-chars
MAGIC_LINK_EXPIRY_HOURS=24

# =============================================================================
# AUTHENTICATION (Optional - for NextAuth.js)
# =============================================================================
# AUTH_SECRET=your-auth-secret-here
# NEXTAUTH_URL=http://localhost:3000
